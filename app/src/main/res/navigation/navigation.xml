<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ceaver.assin.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_assetDetailFragment"
            app:destination="@id/assetDetailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_actionInputFragment"
            app:destination="@id/actionInputFragment" />
        <action
            android:id="@+id/action_homeFragment_to_intentionInputFragment"
            app:destination="@id/intentionInputFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.ceaver.assin.splash.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@+id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/assetDetailFragment"
        android:name="com.ceaver.assin.assets.detail.AssetDetailFragment"
        android:label="AssetDetailFragment" >
        <argument
            android:name="title"
            app:argType="com.ceaver.assin.markets.Title" />
    </fragment>
    <fragment
        android:id="@+id/actionInputFragment"
        android:name="com.ceaver.assin.action.input.ActionInputFragment"
        android:label="ActionInputFragment" >
        <argument
            android:name="actionType"
            app:argType="com.ceaver.assin.action.ActionType" />
        <argument
            android:name="action"
            app:argType="com.ceaver.assin.action.Action"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="title"
            app:argType="com.ceaver.assin.markets.Title"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/intentionInputFragment"
        android:name="com.ceaver.assin.intentions.input.IntentionInputFragment"
        android:label="IntentionInputFragment" >
        <argument
            android:name="intention"
            app:argType="com.ceaver.assin.intentions.Intention"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="title"
            app:argType="com.ceaver.assin.markets.Title"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="amount"
            app:argType="java.math.BigDecimal"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>