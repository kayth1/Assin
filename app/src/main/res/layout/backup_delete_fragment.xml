<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.ceaver.assin.backup.delete.BackupDeleteViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/backupDeleteFragmentRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@={viewModel.radioChecked}">
        </RadioGroup>

        <Button
            android:id="@+id/backupDeleteFragmentDeleteBackupButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:enabled="false"
            android:text="Delete Backup" />

    </LinearLayout>

</layout>