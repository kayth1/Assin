<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/positionListRowSymbol"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/position_symbol_image_content_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/positionListRowPositionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/positionListRowSymbol"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/positionListRowPositionValueBtc"/>

    <TextView
        android:id="@+id/positionListRowPositionValueBtc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@id/positionListRowPositionTitle"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/positionListRowPositionSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/positionListRowPositionTitle"
        app:layout_constraintTop_toBottomOf="@+id/positionListRowPositionTitle"
        app:layout_constraintEnd_toStartOf="@+id/positionListRowPositionValueUsd" />

    <TextView
        android:id="@+id/positionListRowPositionValueUsd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/positionListRowPositionValueBtc"
        app:layout_constraintTop_toBottomOf="@+id/positionListRowPositionValueBtc"/>

</androidx.constraintlayout.widget.ConstraintLayout>