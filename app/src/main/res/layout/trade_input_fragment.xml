<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tradeInputFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    app:layout_constraintEnd_toStartOf="@+id/guideline2"
    app:layout_constraintStart_toStartOf="@+id/guideline2">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- TITLE -->

    <ImageView
        android:id="@+id/tradeInputFragmentTradeTypeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tradeInputFragmentTradeTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tradeInputFragmentTradeTypeImageView" />

    <EditText
        android:id="@+id/tradeInputFragmentTradeDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textAlignment="textEnd"
        android:textSize="10sp"
        android:background="@null"
        android:textColor="#818181"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- BUY ASSET -->

    <TextView
        android:id="@+id/tradeInputFragmentBuyTradeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="Buy asset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tradeInputFragmentTradeTypeImageView" />

    <EditText
        android:id="@+id/tradeInputFragmentBuyAmountTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:inputType="numberDecimal"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tradeInputFragmentBuyTradeLabel" />

    <Spinner
        android:id="@+id/tradeInputFragmentBuySymbolSpinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/tradeInputFragmentBuyAmountTextView" />

    <!-- SELL ASSET -->

    <TextView
        android:id="@+id/tradeInputFragmentSellTradeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="Sell asset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tradeInputFragmentBuyAmountTextView" />

    <EditText
        android:id="@+id/tradeInputFragmentSellAmountTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:textSize="12sp"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tradeInputFragmentSellTradeLabel" />

    <Spinner
        android:id="@+id/tradeInputFragmentSellSymbolSpinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/tradeInputFragmentSellAmountTextView" />

    <!-- COMMENT -->

    <TextView
        android:id="@+id/tradeInputFragmentCommentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Comment"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tradeInputFragmentSellAmountTextView" />

    <EditText
        android:id="@+id/tradeInputFragmentCommentTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:enabled="false"
        android:textSize="12sp"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tradeInputFragmentCommentLabel" />

    <!-- SAVE BUTTON -->

    <Button
        android:id="@+id/tradeInputFragmentSaveButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:textStyle="bold"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tradeInputFragmentCommentTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>